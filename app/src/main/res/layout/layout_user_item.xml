<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/user_item_profile_image"
        android:layout_width="@dimen/profile_image"
        android:layout_height="@dimen/profile_image"
        android:layout_marginStart="@dimen/space_s"
        android:layout_marginTop="@dimen/space_s"
        android:layout_marginBottom="@dimen/space_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/user_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_s"
        android:layout_marginStart="@dimen/space_s"
        app:layout_constraintStart_toEndOf="@+id/user_item_profile_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="John Skeet"/>
    
    <TextView
        android:id="@+id/user_item_reputation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_s"
        android:layout_marginTop="@dimen/space_s"
        app:layout_constraintStart_toEndOf="@+id/user_item_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/user_item_name"
        tools:text="1000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>